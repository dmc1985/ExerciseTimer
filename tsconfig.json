{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "target": "es5",
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true
  },
  "exclude": [
    "coverage",
    "jest.config.js",
    "src/**/*.spec.tsx",
    "src/**/*.stories.tsx",
    "scripts/createPackageFile.ts"
  ],
  "include": [
    "next-env.d.ts"
  ]
}
